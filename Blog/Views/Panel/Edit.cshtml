@model PostViewModel

@{

}

<link href="~/lib/trumbowyg-main/dist/ui/trumbowyg.min.css" rel="stylesheet" />

<div>
	@* the encryption type must be set to multipart/form-data, otherwise the image you try to upload will be null. *@
	<form asp-controller="Panel" asp-action="Edit" method="Post" enctype="multipart/form-data">
		<input asp-for="Id" type="hidden" />
		<div>
			<label>Title</label>
			<input asp-for="Title" />
		</div>
		<div>
			<label>Description</label>
			<input asp-for="Description" />
		</div>
		<div>
			<label>Tags</label>
			<input asp-for="Tags" />
		</div>
		<div>
			<label>Category</label>
			<select asp-for="Category" >
				<option value="Games">Games</option>
				<option value="Books">Books</option>
				<option value="Programming">Programming</option>
			</select>
		</div>
		<div>
			<label>Body</label>
			<textarea id="editor" asp-for="Body"></textarea>
		</div>
		<div>
			<label>Image</label>
			<input asp-for="CurrentImage" type="hidden" />
			<input asp-for="Image" />
		</div>
		<input type="Submit" value="Submit" />
	</form>
</div>

@section Scripts {
	@* add jquery if it doesn't work like this' *@
	@* <script src="//ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script> *@
	<script src="~/lib/trumbowyg-main/dist/trumbowyg.min.js"></script>
	<script>
		$('#editor').trumbowyg();
	</script>
}