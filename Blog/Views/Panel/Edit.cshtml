@model PostViewModel

@{

}

<div>
	@* the encryption type must be set to multipart/form-data, otherwise the image you try to upload will be null. *@
	<form asp-controller="Panel" asp-action="Edit" method="Post" enctype="multipart/form-data">
		<input asp-for="Id" type="hidden"/>
		<div>
			<label>Title</label>
			<input asp-for="Title" />
		</div>
		<div>
			<label>Body</label>
			<input asp-for="Body" />
		</div>
		<div>
			<label>Image</label>
			<input asp-for="Image" />
		</div>
		<input type="Submit" value="Submit" />
	</form>
</div>