@model IEnumerable<PostViewModel>

@{

}
<div class="container">
	<h2>Posts:</h2>
	<a asp-controller="Panel" asp-action="Edit">
		<h3>Add new Post!</h3>
	</a>
	<div>
		<ul>
			@foreach (var post in Model)
			{
				<li>
					@post.Title
					-
					@post.Description
					-
					<a asp-controller="Panel" asp-action="Edit" asp-route-id="@post.Id">Edit</a>
					-
					<a asp-controller="Panel" asp-action="Remove" asp-route-id="@post.Id">Remove</a>

				</li>
			}
		</ul>
	</div>
</div>